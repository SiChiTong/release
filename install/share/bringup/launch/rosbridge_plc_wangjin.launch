<?xml version="1.0"?>
<launch>
    <arg name="plc_port" default="/dev/ttyUSB0"/>
    <node name="rosbridge_plc" pkg="rosbridge_driver" type="rosbridge_driver" output="screen">
        <param name="plc_port" value="$(arg plc_port)"/>
        <rosparam>
            port_chain:
              - name: plc_port
                type: serial
                serial_stop: 1
            topic_chain:
              - name: waypoint_user_pub
                type: subscribe
                freq: 1.0
              - name: read_voltage
                type: event
                freq: 0.1
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x03, 0x00, 0xc8, 0x00, 0x01, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x03, 0x02, voltage, big, crc16, little]
                echo: [voltage]
              - name: read_status
                type: event
                freq: 1.0
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x03, 0x01, 0x2c, 0x00, 0x01, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x03, 0x02, status, big, crc16, little]
                echo: [status]
              - name: light5
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, 0x02, 0x00, 0x00, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, crc16, little]
              - name: light4
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, 0x02, 0x00, 0x10, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, crc16, little]
              - name: light3
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, 0x02, 0x00, 0x18, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, crc16, little]
              - name: light2
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, 0x02, 0x00, 0x1c, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, crc16, little]
              - name: light1
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, 0x02, 0x00, 0x1e, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, crc16, little]
              - name: light0
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, 0x02, 0x00, 0x1f, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x60, 0x00, 0x01, crc16, little]
              - name: light_r
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x5f, 0x00, 0x01, 0x02, 0x00, 0x04, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x5f, 0x00, 0x01, crc16, little]
              - name: light_g
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x5f, 0x00, 0x01, 0x02, 0x00, 0x02, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x5f, 0x00, 0x01, crc16, little]
              - name: light_b
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x5f, 0x00, 0x01, 0x02, 0x00, 0x01, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x5f, 0x00, 0x01, crc16, little]
              - name: light_n
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x5f, 0x00, 0x01, 0x02, 0x00, 0x00, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x5f, 0x00, 0x01, crc16, little]
              - name: relay_on
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x5e, 0x00, 0x01, 0x02, 0x00, 0x01, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x5e, 0x00, 0x01, crc16, little]
              - name: relay_off
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x5e, 0x00, 0x01, 0x02, 0x00, 0x02, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x5e, 0x00, 0x01, crc16, little]
              - name: relay_reset
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x5e, 0x00, 0x01, 0x02, 0x00, 0x00, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x5e, 0x00, 0x01, crc16, little]
              - name: both_on
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x5e, 0x00, 0x03, 0x06, 0x00, 0x03, 0x00, 0x07, 0x00, 0x00, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x5e, 0x00, 0x03, crc16, little]
              - name: both_off
                type: event
                action_chain:
                  - name: plc_port
                    type: write
                    byte: [0xf1, 0x10, 0x01, 0x5e, 0x00, 0x03, 0x06, 0x00, 0x00, 0x00, 0x00, 0x00, 0x1f, crc16, little]
                  - name: plc_port
                    type: read
                    byte: [0xf1, 0x10, 0x01, 0x5e, 0x00, 0x03, crc16, little]
              - name: diagnostics
                type: publish
        </rosparam>
    </node>
</launch>
