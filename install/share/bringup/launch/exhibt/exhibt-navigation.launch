<?xml version="1.0"?>
<launch>
    <include file="$(find bringup)/launch/bringup-dbparam.launch"/>

    <node name="amcl" pkg="amcl" type="amcl" output="screen">
        <remap from="scan" to="scan_rectified" />
        <rosparam>
            initial_pose_x: 0.0
            initial_pose_y: 0.0
            initial_pose_a: 0.0
            use_map_topic: true
            odom_model_type: diff
            tf_broadcast: true
        </rosparam>
    </node>

    <node name="robot_pose_publisher" pkg="robot_pose_publisher" type="robot_pose_publisher" output="screen"/>

    <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
<!--         <remap from="cmd_vel" to="/yocs_cmd_vel_mux/input/navigation"/> --> 
        <rosparam>
            base_global_planner: "navfn/NavfnROS"
            base_local_planner: "dwa_local_planner/DWAPlannerROS"
            recovery_behaviors:
              - name: 'conservative_reset'
                type: 'clear_costmap_recovery/ClearCostmapRecovery'
              - name: 'aggressive_reset'
                type: 'clear_costmap_recovery/ClearCostmapRecovery'
            conservative_reset:
                reset_distance: 3.0
                layer_names: [obstacle_layer]
            aggressive_reset:
                reset_distance: 0.0
                layer_names: [obstacle_layer]
            controller_frequency: 5.0 #10.0
            planner_patience: 5.0
            controller_patience: 1.0
            oscillation_timeout: 2.0
            planner_frequency: 0.0
            global_costmap:
                global_frame: map
                robot_base_frame: base_footprint
                transform_tolerance: 0.5
                update_frequency: 1.0 #2.0
                publish_frequency: 0.0
                static_map: true
                footprint: [[0.37, -0.275], [0.37, 0.275], [-0.37, 0.275], [-0.37, -0.275]]
                plugins:
                  - name: static_layer
                    type: "costmap_2d::StaticLayer"
                  - name: obstacle_layer
                    type: "costmap_2d::ObstacleLayer"
                  - name: inflation_layer
                    type: "costmap_2d::InflationLayer"
                static_layer:
                    map_topic: /map_edit
                obstacle_layer:
                    observation_sources: scan_rectified #sensor_pointcloud
                    scan_rectified:
                        topic: /scan_rectified                       
                        data_type: LaserScan
                        clearing: true
                        marking: true
                        max_obstacle_height: 1.0
                        min_obstacle_height: -1.0
                        inf_is_valid: true
                    sensor_pointcloud:
                        topic: /camera/depth/points
                        data_type: PointCloud2
                        clearing: true 
                        marking: true
                        max_obstacle_height: 2.0 #1.5
                        min_obstacle_height: 0.2          
                    track_unknown_space: true
                inflation_layer:
                    inflation_radius: 0.75
                    cost_scaling_factor: 5.0
            local_costmap:
                global_frame: odom
                robot_base_frame: base_footprint
                transform_tolerance: 0.5
                update_frequency: 2.0 #5.0
                publish_frequency: 0.0
                footprint: [[0.37, -0.275], [0.37, 0.275], [-0.37, 0.275], [-0.37, -0.275]]
                static_map: false
                rolling_window: true
                width: 6.0
                height: 6.0
                plugins:
                  - name: obstacle_layer
                    type: "costmap_2d::ObstacleLayer"            
                  - name: inflation_layer
                    type: "costmap_2d::InflationLayer"
                obstacle_layer:
                    observation_sources: scan_rectified #sensor_pointcloud
                    scan_rectified:
                        topic: /scan_rectified                        
                        data_type: LaserScan
                        clearing: true
                        marking: true
                        max_obstacle_height: 1.0
                        min_obstacle_height: -1.0
                        inf_is_valid: true
                    sensor_pointcloud:
                        topic: /camera/depth/points
                        data_type: PointCloud2
                        clearing: true 
                        marking: true
                        max_obstacle_height: 2.0
                        min_obstacle_height: 0.2
                    track_unknown_space: true
                inflation_layer:
                    inflation_radius: 0.75
                    cost_scaling_factor: 5.0 #1
            GlobalPlanner:
                allow_unknown: false
            NavfnROS:
                allow_unknown: false
            TrajectoryPlannerROS:
                max_vel_x: 0.5
                min_vel_x: 0.1
                max_vel_theta: 1.0
                min_vel_theta: -1.0
                min_in_place_vel_theta: 0.4
                acc_lim_x: 1.0 #2.5
                acc_lim_y: 0.0 #1.0
                acc_lim_theta: 2.0 #3.2
                holonomic_robot: false
                yaw_goal_tolerance: 0.05 #0.15
                xy_goal_tolerance: 0.075 #0.15
                latch_xy_goal_tolerance: false #true
                meter_scoring: true
                occdist_scale: 0.5 #0.01
                heading_scoring: true
                heading_scoring_timestep: 1.0 #0.8
                dwa: true
                #global_frame_id: odom
                oscillation_reset_dist: 0.075
            DWAPlannerROS:
                acc_lim_x: 0.5
                acc_lim_y: 0.0
                acc_lim_th: 3.2
                max_trans_vel: 0.8
                min_trans_vel: 0.1
                max_vel_x: 0.8
                min_vel_x: 0.0
                max_vel_y: 0.0
                min_vel_y: 0.0
                max_rot_vel: 1.0
                min_rot_vel: 0.25
                yaw_goal_tolerance: 0.05
                xy_goal_tolerance: 0.10
                latch_xy_goal_tolerance: true 
        </rosparam>
    </node>
</launch>
