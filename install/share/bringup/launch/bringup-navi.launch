<?xml version="1.0"?>
<launch>
    <arg name="footprint" default="[[0.40, -0.33], [0.40, 0.33], [-0.40, 0.33], [-0.40, -0.33]]"/>

    <include file="$(find bringup)/launch/bringup-dbparam.launch"/>

    <node name="amcl" pkg="amcl" type="amcl" output="screen">
        <remap from="scan" to="scan_rectified" />
        <rosparam>
            initial_pose_x: 0.0
            initial_pose_y: 0.0
            initial_pose_a: 0.0
            use_map_topic: true
            odom_model_type: diff
            tf_broadcast: true
        </rosparam>
    </node>

    <node name="robot_pose_publisher" pkg="robot_pose_publisher" type="robot_pose_publisher" output="screen"/>

    <node name="move_base" pkg="move_base" type="move_base" output="screen">
        <rosparam>
            base_global_planner: "navfn/NavfnROS"
            base_local_planner: "dwa_local_planner/DWAPlannerROS"
            recovery_behaviors:
              - name: 'conservative_reset'
                type: 'clear_costmap_recovery/ClearCostmapRecovery'
              - name: 'aggressive_reset'
                type: 'clear_costmap_recovery/ClearCostmapRecovery'
            conservative_reset:
                reset_distance: 3.0
                layer_names: [obstacle_layer]
            aggressive_reset:
                reset_distance: 0.0
                layer_names: [obstacle_layer, range_sensor_layer]
            controller_frequency: 10.0
            planner_patience: 5.0
            controller_patience: 15.0
            oscillation_timeout: 2.0
            planner_frequency: 1.0
            global_costmap:
                global_frame: map
                robot_base_frame: base_footprint
                update_frequency: 2.0
                publish_frequency: 0.5 #0.0
                static_map: true
                resolution: 0.05
                plugins:
                  - name: static_layer
                    type: "costmap_2d::StaticLayer"
                  - name: obstacle_layer
                    type: "costmap_2d::ObstacleLayer"
                  - name: range_sensor_layer
                    type: "range_sensor_layer::RangeSensorLayer"
                  - name: inflation_layer
                    type: "costmap_2d::InflationLayer"
                static_layer:
                    map_topic: /map_edit
                obstacle_layer:
                    observation_sources: scan_rectified #scan_left scan_right
                    scan_rectified:
                        expected_update_rate: 5.0
                        data_type: LaserScan
                        clearing: true
                        max_obstacle_height: 1.0
                        min_obstacle_height: -1.0
                        inf_is_valid: true
                    scan_left:
                        expected_update_rate: 5.0
                        data_type: LaserScan
                        clearing: true
                        max_obstacle_height: 2.0
                        min_obstacle_height: 0.05
                        inf_is_valid: true
                    scan_right:
                        expected_update_rate: 5.0
                        data_type: LaserScan
                        clearing: true
                        max_obstacle_height: 2.0
                        min_obstacle_height: 0.05
                        inf_is_valid: true
                    track_unknown_space: true
                    footprint_clearing_enabled: false
                    z_voxels: 8
                range_sensor_layer:
                    topics: ['/sonar_11oc', '/sonar_10oc', '/sonar_8oc', '/sonar_7oc', '/sonar_5oc', '/sonar_4oc', '/sonar_2oc', '/sonar_1oc']
                    mark_threshold: 0.6
                    clear_on_max_reading: true
                inflation_layer:
                    inflation_radius: 0.75
                    cost_scaling_factor: 1
                footprint_topic: footprint_setup
            local_costmap:
                global_frame: odom
                robot_base_frame: base_footprint
                transform_tolerance: 0.2 #0.5
                update_frequency: 5.0
                publish_frequency: 2.0 #0.0
                static_map: false
                rolling_window: true
                width: 6.0
                height: 6.0
                resolution: 0.05
                plugins:
                  - name: obstacle_layer
                    type: "costmap_2d::ObstacleLayer"
                  - name: range_sensor_layer
                    type: "range_sensor_layer::RangeSensorLayer"
                  - name: inflation_layer
                    type: "costmap_2d::InflationLayer"
                obstacle_layer:
                    observation_sources: scan_rectified #scan_left scan_right
                    scan_rectified:
                        expected_update_rate: 5.0
                        data_type: LaserScan
                        clearing: true
                        max_obstacle_height: 1.0
                        min_obstacle_height: -1.0
                        inf_is_valid: true
                    scan_left:
                        expected_update_rate: 5.0
                        data_type: LaserScan
                        clearing: true
                        max_obstacle_height: 2.0
                        min_obstacle_height: 0.05
                        inf_is_valid: true
                    scan_right:
                        expected_update_rate: 5.0
                        data_type: LaserScan
                        clearing: true
                        max_obstacle_height: 2.0
                        min_obstacle_height: 0.05
                        inf_is_valid: true
                    track_unknown_space: true
                    footprint_clearing_enabled: false
                    z_voxels: 8
                range_sensor_layer:
                    topics: ['/sonar_11oc', '/sonar_10oc', '/sonar_8oc', '/sonar_7oc', '/sonar_5oc', '/sonar_4oc', '/sonar_2oc', '/sonar_1oc']
                    mark_threshold: 0.6
                    clear_on_max_reading: true
                inflation_layer:
                    inflation_radius: 0.75
                    cost_scaling_factor: 1
                footprint_topic: footprint_setup
            GlobalPlanner:
                allow_unknown: false
            NavfnROS:
                allow_unknown: false
            TrajectoryPlannerROS:
                acc_lim_x: 0.5
                acc_lim_y: 0.0
                acc_lim_theta: 3.2
                max_vel_x: 0.5
                min_vel_x: 0.1
                max_vel_theta: 1.0
                min_vel_theta: -1.0
                min_in_place_vel_theta: 0.3 #0.4
                escape_vel: -0.1
                holonomic_robot: false
                yaw_goal_tolerance: 0.05
                xy_goal_tolerance: 0.075
                latch_xy_goal_tolerance: true
                meter_scoring: true
                occdist_scale: 0.5 #0.01
                heading_scoring: true
                heading_scoring_timestep: 1.0 #0.8
                dwa: true
                #global_frame_id: odom
                oscillation_reset_dist: 0.075
            DWAPlannerROS:
                acc_lim_x: 0.5
                acc_lim_y: 0.0
                acc_lim_th: 3.2
                max_trans_vel: 0.55
                min_trans_vel: 0.1
                max_vel_x: 0.55
                min_vel_x: 0.0
                max_vel_y: 0.0
                min_vel_y: 0.0
                max_rot_vel: 1.0
                min_rot_vel: 0.3 #0.4
                yaw_goal_tolerance: 0.05
                xy_goal_tolerance: 0.075
                latch_xy_goal_tolerance: true 
                penalize_negative_x: false #true
                occdist_scale: 0.5
                scaling_speed: 0.25
                max_scaling_factor: 0.2
                oscillation_reset_dist: 0.075
        </rosparam>
        <param name="global_costmap/footprint" value="$(arg footprint)"/>
        <param name="local_costmap/footprint" value="$(arg footprint)"/>
    </node>
</launch>
